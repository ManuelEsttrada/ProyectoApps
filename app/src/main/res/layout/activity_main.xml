<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/fondo1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <Space
                android:layout_width="match_parent"
                android:layout_height="140dp" />
            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:text="Monitoreo de la calidad del aire"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="#FFFF"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <Button
                android:id="@+id/botonInicioSesion"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Iniciar sesiÃ³n"
                android:backgroundTint="#8D1515"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <Button
                android:id="@+id/botonRegistrarse"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Registrarse"
                android:backgroundTint="#8D1515"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp"
                />
            <Space
                android:layout_width="match_parent"
                android:layout_height="30dp" />
            <Button
                android:id="@+id/botonContinuar"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:text="Continuar"
                android:backgroundTint="#8D1515"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp"
                />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>